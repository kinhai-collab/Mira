{
  "family": "mira-websocket",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole-mira",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole-mira",
  "containerDefinitions": [
    {
      "name": "mira-websocket",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-2.amazonaws.com/mira-websocket:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SUPABASE_URL",
          "value": "https://YOUR_PROJECT.supabase.co/"
        },
        {
          "name": "SUPABASE_KEY",
          "value": "REPLACE_WITH_ENV_VAR"
        },
        {
          "name": "SUPABASE_SERVICE_ROLE_KEY",
          "value": "REPLACE_WITH_ENV_VAR"
        },
        {
          "name": "ELEVENLABS_API_KEY",
          "value": "REPLACE_WITH_ENV_VAR"
        },
        {
          "name": "ELEVENLABS_VOICE_ID",
          "value": "REPLACE_WITH_ENV_VAR"
        },
        {
          "name": "OPENAI_API_KEY",
          "value": "REPLACE_WITH_ENV_VAR"
        },
        {
          "name": "FRONTEND_URL",
          "value": "https://your-frontend.amplifyapp.com"
        },
        {
          "name": "USE_DYNAMODB",
          "value": "true"
        },
        {
          "name": "STAGE",
          "value": "dev"
        },
        {
          "name": "TRANSCRIPTS_TABLE",
          "value": "mira-transcripts-dev"
        },
        {
          "name": "CACHE_TABLE",
          "value": "mira-cache-dev"
        },
        {
          "name": "SESSIONS_TABLE",
          "value": "mira-sessions-dev"
        },
        {
          "name": "S3_BUCKET",
          "value": "mira-data-dev-YOUR_ACCOUNT_ID"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mira-websocket",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

